<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:theme="@style/Theme.AppCompat"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:id="@+id/addEntry_container"
    android:paddingBottom="10dp">

    <EditText
        android:id="@+id/choose_title"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"
        android:hint="Title"
        android:textColorHint="@color/places_text_black_alpha_87"
        android:importantForAutofill="no"
        android:textColor="@color/quantum_black_text"
        android:inputType="textMultiLine"
        tools:targetApi="o"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_title"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="55dp" />

    <TextView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:id="@+id/entry_location"
        android:layout_below="@+id/choose_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="25dp"
        android:hint="Location"
        android:textColorHint="@color/navColour"
        android:textColor="@color/quantum_black_text"
        android:textSize="20sp"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="65dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_location"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="105dp" />

    <EditText
        android:id="@+id/choose_caption"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_below="@id/image_view"
        android:hint="@string/Enter_Caption"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:textColor="@color/quantum_black_text"
        android:textColorHint="@color/places_text_black_alpha_87"
        tools:targetApi="o" />


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_alignEnd="@+id/entry_location"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/ImagePreview" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@+id/entry_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="190dp" />

</RelativeLayout>