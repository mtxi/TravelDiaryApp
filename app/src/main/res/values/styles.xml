<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/toolbarColour</item>
        <item name="colorPrimaryDark">@color/navColour</item>
        <item name="colorAccent">@color/toolbarColour</item>
        <item name="android:layout">@color/white</item>
        <item name="android:label">@color/white</item>
        <!--<item name="android:textColor">@color/quantum_grey700</item>
        <item name="android:textColorPrimary">@color/white</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
